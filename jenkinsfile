pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Kubsoon98/pytest.git']])
            }
        }
    stage('Build') {
            steps {
                sh '''
                    apt-get update
                    apt-get install python3
                '''
                sh 'python3 ops.py' 
            }
        }
    }   
}