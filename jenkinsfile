pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Kubsoon98/pytest.git']])
            }
        }
    stage('Build') {
        agent{
                docker {
                    image 'faucet/python3'
                    reuseNode true
                }
            }
            steps {
                sh 'python3 ops.py' 
            }
        }
    stage('Test') {
            steps {
        agent{
                docker {
                    image 'faucet/python3'
                    reuseNode true
                }
            }
            steps {
                sh 'python3 test_ops.py' 
            }
        }
            }
        }
    }
}